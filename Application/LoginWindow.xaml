<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
        
    <Border Padding="10">
        <StackPanel>
            <Frame x:Name="_mainFrame" />
            <TextBlock Text="Log-in" FontSize="40" FontWeight="Bold" Margin="320 0"/>
            <TextBlock Text="Username:" Margin="0 0 0 10"/>
            <TextBox x:Name="usernameBox" Padding="2"/>
            <TextBlock Text="Password:" Margin="0 0 0 10"/>
            <PasswordBox x:Name="passwordBox" PasswordChar="*"/>
            <Button x:Name ="SubmitButton" Click="SubmitButton_Click" Margin ="0 10" Padding="8" Content="Submit"/>
            <Button x:Name="CreateButton" Click="CreateButton_Click" Margin="0 5" Padding="8" Content="Create Account"/>
            <TextBox x:Name="Textbox" IsEnabled="False" Margin="0 10" Foreground="Red"/>
        </StackPanel>
    </Border>
</Window>
